\newcommand\blankpage{
    \clearpage
    \thispagestyle{empty}%
    \vspace*{\fill}
    \begin{center}
        \ifthenelse{\equal{\LanguageOption}{en}}{%
            \textcolor{gray!50}{\textit{Page intentionally left blank.}}
        }{%
            \textcolor{gray!50}{\textit{Page laissée intentionnellement blanche.}}
        }
    \end{center}
    \vspace*{\fill}
    \clearpage
} 

\newcommand{\plainblankpage}{\thispagestyle{plain}\blankpage}

